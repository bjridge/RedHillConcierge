<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ballstateuniversity.computerscience.redhillconcierge.redhillconcierge">
    <application
        android:name="Model.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme"
        >
        <uses-permission android:name="android.permission.CALL_PHONE" />

        <activity android:name="ViewControllers.Login" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>
        <activity android:name="ViewControllers.MainActivity" android:screenOrientation="portrait"
            />
        <activity android:name="ViewControllers.UserDetailedView" android:screenOrientation="portrait"/>
        <activity android:name="ViewControllers.HorseDetailedViewTabs" android:screenOrientation="portrait">
            <uses-permission android:name="android.permission.CALL_PHONE" />
        </activity>
    </application>
</manifest>