<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_field_background"
    android:gravity="center">

    <!--Header-->
    <android.support.v7.widget.Toolbar android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/tab_bar"
        android:elevation="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <ImageButton android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="#00000000"
            app:srcCompat="@mipmap/back_icon"
            android:layout_gravity="left"/>

        <TextView android:id="@+id/lblheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horse Info"
            android:textColor="#F0F8FF"
            android:textSize="30dp"
            android:layout_gravity="center"/>
        <ImageButton android:id="@+id/personIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="#00000000"
            app:srcCompat="@mipmap/person_icon"
            android:layout_gravity="right"/>
    </android.support.v7.widget.Toolbar>

    <!--main-->
    <android.support.v4.widget.NestedScrollView android:id="@+id/scvContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_toolbar"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="60sp"
        android:layout_marginBottom="60sp"
        android:background="@drawable/contant">


    </android.support.v4.widget.NestedScrollView>

    <!--Tab bar-->
    <TabHost android:id="@+id/tbButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/tab_bar"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/home_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:background="@drawable/tab_bar"
                    app:srcCompat="@mipmap/home_icon" />

                <ImageButton
                    android:id="@+id/search_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:background="@drawable/tab_bar"
                    app:srcCompat="@mipmap/search_icon" />

                <ImageButton
                    android:id="@+id/feed_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:background="@drawable/tab_bar"
                    app:srcCompat="@mipmap/feed_icon" />

                <ImageButton
                    android:id="@+id/col_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:background="@drawable/tab_bar"
                    app:srcCompat="@mipmap/cal_icon" />
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </FrameLayout>
        </RelativeLayout>
    </TabHost>
</android.support.design.widget.CoordinatorLayout>