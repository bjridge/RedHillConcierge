<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

        <TextView
            android:id="@+id/horse_name"
            style="@style/MyHorseListItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Black Stallion"
            android:layout_marginRight="50px"/>

        <TextView
            android:id="@+id/changes_made"
            style="@style/MyHorseListItemTitle"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text=" "
            android:textAlignment="textEnd"
            android:textColor="#50FF0000"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/horse_description"
            style="@style/MyHorseListItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Black Andalusian" />

        <TextView
            android:id="@+id/horse_stall"
            style="@style/MyHorseListItemText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:text="Stall 24"
            android:textAlignment="textEnd" />

    </LinearLayout>

</LinearLayout>