<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/horse_exit_button"
        android:layout_width="@dimen/toolbar_height"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/transparent"
        android:clickable="true"
        android:elevation="24dp"
        android:scaleType="fitCenter"
        android:tint="@color/accent"
        app:srcCompat="@drawable/ic_down" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profile_image_background"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_gravity="top"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/background__authentication" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@color/transparent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/horse_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@android:drawable/screen_background_light_transparent"
                        android:focusableInTouchMode="true"
                        app:srcCompat="@drawable/image__empty_profile" />

                    <EditText
                        android:id="@+id/horse_photo_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ems="10" />

                </LinearLayout>
            </android.support.design.widget.CoordinatorLayout>

        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"

                android:columnCount="2">

            <TextView
                android:id="@+id/Name"
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/horse_name_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView17"
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breed"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/horse_breed_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="5dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView19"
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/horse_color_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="5dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView14"
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/horse_sex_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="5dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView20"
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grain Amount"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/horse_grain_amount_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView16"
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grain Type"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/horse_grain_type_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="5dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView15"
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hay"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/horse_hay_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="5dp"
                android:textSize="20dp" />

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/horse_medication"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="5dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView13"
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="8"
                android:text="Stall Number"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/horse_stall_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="8"
                android:ems="10"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lblStall"
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stalled Today? "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/horse_stall_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/notes"
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="10"
                android:text="Other Notes"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/horse_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="10"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/owner"
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginTop="5dp"
                android:layout_row="11"
                android:text="owner"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/horse_owner_button"
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_row="11"
                android:clickable="true"
                android:onClick="buttonClicked"
                android:text="Some Owner Name >"
                android:textAlignment="center"
                android:textColor="@color/accent"
                android:textSize="20dp" />

            <GridLayout
                android:id="@+id/grid_in_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:layout_columnSpan="2"
                android:layout_row="12"
                android:columnCount="8">
                <TextView
                    style="@style/MyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:text="Sun | "
                    android:textSize="20dp" />
                <TextView
                    style="@style/MyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:text="M | "
                    android:textSize="20dp" />
                <TextView
                    style="@style/MyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:text="T | "
                    android:textSize="20dp" />
                <TextView
                    style="@style/MyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:text="W | "
                    android:textSize="20dp" />
                <TextView
                    style="@style/MyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="5"
                    android:layout_row="0"
                    android:text="Th | "
                    android:textSize="20dp" />
                <TextView
                    style="@style/MyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="6"
                    android:layout_row="0"
                    android:text="F | "
                    android:textSize="20dp" />
                <TextView
                    style="@style/MyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="7"
                    android:layout_row="0"
                    android:text="Sat"
                    android:textSize="20dp" />

                <TextView
                    style="@style/MyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:text="Day In"
                    android:textSize="20dp" />
                <CheckBox
                    android:id = "@+id/Day_Sun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:textSize="20dp"
                    />
                <CheckBox
                    android:id = "@+id/Day_Mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:textSize="20dp"
                    />
                <CheckBox
                    android:id = "@+id/Day_Tues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:textSize="20dp"
                    />
                <CheckBox
                    android:id = "@+id/Day_Wed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="4"
                    android:layout_row="1"
                    android:textSize="20dp"
                    />
                <CheckBox
                    android:id = "@+id/Day_Thu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="5"
                    android:layout_row="1"
                    android:textSize="20dp"
                    />
                <CheckBox
                    android:id = "@+id/Day_Fri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="6"
                    android:layout_row="1"
                    android:textSize="20dp"
                    />
                <CheckBox
                    android:id = "@+id/Day_Sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="7"
                    android:layout_row="1"
                    android:textSize="20dp"
                    />

                <TextView
                    style="@style/MyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:text="Night In"
                    android:textSize="20dp" />
                <CheckBox
                    android:id = "@+id/Night_Sun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:textSize="20dp"
                    />
                <CheckBox
                    android:id = "@+id/Night_Mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:textSize="20dp"
                    />
                <CheckBox
                    android:id = "@+id/Night_Tues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:textSize="20dp"
                    />
                <CheckBox
                    android:id = "@+id/Night_Wed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="4"
                    android:layout_row="2"
                    android:textSize="20dp"
                    />
                <CheckBox
                    android:id = "@+id/Night_Thu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="5"
                    android:layout_row="2"
                    android:textSize="20dp"
                    />
                <CheckBox
                    android:id = "@+id/Night_Fri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="6"
                    android:layout_row="2"
                    android:textSize="20dp"
                    />
                <CheckBox
                    android:id = "@+id/Night_Sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="7"
                    android:layout_row="2"
                    android:textSize="20dp"
                    />
            </GridLayout>

            <Button
                android:id="@+id/save_horse_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_row="13"
                android:clickable="true"
                android:onClick="buttonClicked"
                android:text="Save Changes"
                android:textAlignment="center"
                android:textColor="@color/accent" />

            <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:layout_row="14"
                    android:columnCount="3">

                    <android.support.design.widget.CheckableImageButton
                        android:id="@+id/back_button_clicked"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:layout_row="0"
                        android:background="@color/transparent"
                        android:clickable="true"
                        android:elevation="24dp"
                        android:onClick="buttonClicked"
                        android:rotation="90"
                        android:scaleType="fitCenter"
                        android:textAlignment="center"
                        android:tint="@color/accent"
                        app:srcCompat="@drawable/ic_down" />

                    <TextView
                        android:id="@+id/stall_Number"
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginTop="5dp"
                        android:layout_row="0"
                        android:textSize="28dp" />

                    <android.support.design.widget.CheckableImageButton
                        android:id="@+id/next_button"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:layout_row="0"
                        android:background="@color/transparent"
                        android:clickable="true"
                        android:elevation="24dp"
                        android:scaleType="fitCenter"
                        android:textAlignment="center"
                        android:tint="@color/accent"
                        app:srcCompat="@drawable/ic_down"
                        android:rotation="270"
                        android:onClick="buttonClicked" />
                </GridLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
