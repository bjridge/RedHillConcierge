<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout">

    <ProgressBar
        android:id="@+id/loading_icon"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/main_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/title"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="15dp"/>


    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height"
        android:layout_marginBottom="@dimen/tab_bar_height"
        android:id="@+id/view_pager"
        >
    </android.support.v4.view.ViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_bar_height"
        android:layout_gravity="bottom"
        android:background="@color/headerOne"
        app:tabGravity="fill"
        >
    </android.support.design.widget.TabLayout>

    <ImageButton
        android:id="@+id/camera_button"
        android:layout_width="@dimen/toolbar_height"
        android:layout_height="@dimen/toolbar_height"
        app:srcCompat="@drawable/ic_camera"
        android:background="@drawable/my__ripple_light_accent"
        />

    <ImageButton
        android:id="@+id/profile_button"
        android:layout_width="@dimen/toolbar_height"
        android:layout_height="@dimen/toolbar_height"
        android:layout_gravity="top|right"
        app:srcCompat="@drawable/ic_profile_white"
        android:background="@drawable/my__ripple_light_accent"
        />
    <ImageButton
        android:id="@+id/administrator_button"
        android:layout_width="@dimen/toolbar_height"
        android:layout_height="@dimen/toolbar_height"
        android:layout_gravity="top|right"
        android:layout_marginRight="@dimen/toolbar_height"
        app:srcCompat="@drawable/ic_administrator_white"
        android:background="@drawable/my__ripple_light_accent"
        />

</android.support.design.widget.CoordinatorLayout>
