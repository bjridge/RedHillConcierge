<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/headerTwo">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:background="@color/emphasis"
        android:padding="8dp"
        android:elevation="10dp"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Breed"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/search_breed_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView3"
            style="@style/MyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Color"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/search_color_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_row="2"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4"
            style="@style/MyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Sex"
            android:textSize="20dp"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/search_sex_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_row="3"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView7"
            style="@style/MyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Stall"
            android:textSize="20dp"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/search_stall_number_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_row="4"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView8"
            style="@style/MyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:text="Horse's Name: "
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/search_name_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_row="5"
            android:textSize="20dp" />

        <TextView
            style="@style/MyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:text="Owner's Name: "
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/search_owner_name_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="6"
            android:textSize="20dp" />


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_columnSpan="2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/body"
        android:orientation="vertical">

        <ListView
            android:id="@+id/horse_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible"/>
        <LinearLayout android:id="@+id/empty"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:gravity="center">

            <TextView android:text="No Results"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                >
            </TextView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>