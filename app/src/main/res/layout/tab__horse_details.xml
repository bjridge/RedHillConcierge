<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="90dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_save_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/headerTwo">

        <LinearLayout
            android:id="@+id/image_and_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/headerOne"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/horse_detail_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/ic_horse_head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/horse_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/horse_detail_picture_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="image url"
                    android:textColor="@color/colorDivider" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/headerTwo"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/body"
                android:layout_marginBottom="5dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/body"
                    android:columnCount="2">

                    <TextView
                        android:id="@+id/textView17"
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breed"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/horse_detail_breed_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView19"
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/horse_detail_color_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView14"
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sex"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/horse_detail_sex_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView20"
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grain Amount"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/horse_detail_grain_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView16"
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grain Type"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/horse_detail_grain_type_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView15"
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hay"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/horse_detail_hay_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medical"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/horse_detail_medical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView13"
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="8"
                        android:text="Stall Number"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/horse_detail_stall_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="8"
                        android:ems="10"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/notes"
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="10"
                        android:text="Other Notes"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/horse_detail_notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="10"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginTop="5dp"
                        android:layout_row="11"
                        android:text="Rider(s)"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/horse_detail_rider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="11"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/owner"
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginTop="5dp"
                        android:layout_row="12"
                        android:text="owner"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/horse_detail_owner_button"
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_row="12"
                        android:clickable="true"
                        android:onClick="buttonClicked"
                        android:text="Some Owner Name >"
                        android:textAlignment="center"
                        android:textColor="@color/accent"
                        android:textSize="20dp" />

                </GridLayout>

                <TextView
                    android:id="@+id/textView11"
                    style="@style/MyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_row="12"
                    android:text="Inside During Daytime"
                    android:textSize="20dp" />

                <GridLayout
                    android:id="@+id/grid_in_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:layout_row="13">

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:text="Sun "
                        android:textSize="20dp" />

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:text="M"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:text="T"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:text="W"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="5"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:text="Th"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="6"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:text="F"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="7"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:text="Sat"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/Day_Sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/Day_Mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/Day_Tues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/Day_Wed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/Day_Thu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="5"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/Day_Fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="6"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/Day_Sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="7"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:textSize="20dp" />


                </GridLayout>

                <TextView
                    android:id="@+id/textView12"
                    style="@style/MyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_row="12"
                    android:text="Inside During Night Time"
                    android:textSize="20dp" />

                <GridLayout
                    android:id="@+id/grid_in_out_day"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_row="13">

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:text="Sun "
                        android:textSize="20dp" />

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:text="M"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:text="T"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:text="W"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="5"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:text="Th"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="6"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:text="F"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="7"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:text="Sat"
                        android:textSize="20dp" />


                    <CheckBox
                        android:id="@+id/Night_Sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="2"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/Night_Mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="2"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/Night_Tues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="2"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/Night_Wed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="2"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/Night_Thu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="5"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="2"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/Night_Fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="6"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="2"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/Night_Sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="7"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="2"
                        android:textSize="20dp" />
                </GridLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>