<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/headerOne</item>
        <item name="colorPrimaryDark">@color/statusBar</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:colorBackground">@color/body</item>
        <item name="android:textColorPrimaryInverse">@color/body</item>

    </style>

    <style name="headerOne">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_height">100sp</item>
        <item name="android:background">@color/headerOne</item>
    </style>
    <style name="headerTwo">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:background">@color/headerTwo</item>
    </style>

    <style name="MyToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:paddingLeft">5sp</item>
    </style>

    <style name="MyButtonOne">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:radius">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">10dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">70.0</item>
    </style>

    <style name="MyHeadingOne">
        <item name="android:textColor">@color/colorHeadingOne</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">50.0</item>


    </style>

    <style name="MyHeadingTwo">
        <item name="android:textColor">@color/colorHeadingOne</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">0sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">20.0</item>
    </style>

    <style name="MyDarkPrimaryText">
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
    </style>

    <style name="MyTitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/my__ripple_light_accent</item>
        <item name="tabIndicatorColor">@color/accent</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <style name="MyMenuButtons">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:color">@drawable/selector__today_tab_icon</item>
    </style>
    <style name="MyText">
        <item name="android:textSize">18sp</item>

    </style>




</resources>
