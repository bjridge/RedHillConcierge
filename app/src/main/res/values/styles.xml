<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>

    </style>

    <style name="MyToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:paddingLeft">5sp</item>
    </style>

    <style name="MyButtonOne">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:radius">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MyHeadingOne">
        <item name="android:textColor">@color/colorHeadingOne</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">20sp</item>
    </style>

    <style name="MyHeadingTwo">
        <item name="android:textColor">@color/colorHeadingOne</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">0sp</item>
    </style>

    <style name="MyDarkPrimaryText">
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
    </style>



</resources>
